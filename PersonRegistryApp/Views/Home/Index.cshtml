<script>
    $(document).ready(function () {
        alert("test alert");
        //myOtherWay();
        
        
        
        $("#tbl_Registry").dataTable({
            "bInfo": false,
            'bFilter': false,
            "bPaginate": false,
            "bSort": false,
            "aaData": [],
        });
        getPersonRegistry();
        
    });

    function myOtherWay() {
        var url = 'http://localhost:54770/api/PersonRegistry';

        $.ajax({
            url: url,
            dataType: 'JSON',
            type: 'GET',
        }).done(function (data) {
            $.each(data, function () {
                $('#tbl_Registry').append("<tr><td>" + this.Id + "</td>"
                    + "<td>" + this.FirstName + "</td>"
                    + "<td>" + this.LastName + "</td>"
                    + "<td>" + this.Occupation + "</td>"
                    + "<td>" + this.Gender + "</td>"
                    + "<td>" + this.StreetAddress + "</td>"
                    + "<td>" + this.CityAddress + "</td>"
                    + "<td>" + this.State + "</td>"
                    + "<td>" + this.ZipCode + "</td>"
                    + "<td>" + this.RecordedTime + "</tr></td>")
            });
        })
    }

    function renderPersonRegistry(data) {
        var url = 'http://localhost:54770/api/PersonRegistry';
        var DataArray = [];
        
        $.each(data, function () {
            DataArray.push([this.Id,
                this.FirstName,
                this.LastName,
                this.Occupation,
                this.Gender,
                this.StreetAddress,
                this.CityAddress,
                this.State,
                this.ZipCode,
                this.RecordedTime]);
        });

        $('#tbl_Registry').dataTable().fnAddData(DataArray);
        $('#tbl_Registry').dataTable().fnAdjustColumnSizing();
    }

    function getPersonRegistry() {
        var url = 'http://localhost:54770/api/PersonRegistry';
        $.ajax({
            url: url,
            dataType: 'json',
            type: 'GET',
        }).done(function (response) {
            renderPersonRegistry(response);
        });
    }
</script>
